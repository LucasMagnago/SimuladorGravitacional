<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimuladorGravitacional</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SimuladorGravitacional.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="align">
            <a style="color:white" href="@Url.Action("Index", "Home")">SimuladorGravitacional</a>
        </div> 
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="align">
            &copy; 2022 - SimuladorGravitacional
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
